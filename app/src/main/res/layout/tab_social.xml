<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_marginTop="20dp">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="100px"
                android:layout_height="130px"
                android:id="@+id/bttFB"
                android:background="@mipmap/facebook"/>

            <Button
                android:layout_width="200px"
                android:layout_height="150px"
                android:id="@+id/bttInsta"
                android:background="@mipmap/instagram"
                android:layout_column="2"
                android:layout_marginLeft="50px" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Facebook"
                android:id="@+id/textView7"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Instagram"
                android:layout_column="2"
                android:id="@+id/textView6"
                android:layout_marginLeft="50px"
                android:gravity="center"/>
        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        android:layout_gravity="center_horizontal">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10px">

            <Button
                android:layout_width="280px"
                android:layout_height="130px"
                android:id="@+id/bttYT"
                android:background="@mipmap/youtube"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="35px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="YouTube"
                android:gravity="center"
                android:id="@+id/textView8" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10px">

            <Button
                android:layout_width="280px"
                android:layout_height="130px"
                android:id="@+id/bttTunes"
                android:background="@mipmap/itunes"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="35px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="iTunes"
                android:gravity="center"
                android:id="@+id/textView9" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px">

            <Button
                android:layout_width="50px"
                android:layout_height="225px"
                android:id="@+id/bttHome"
                android:background="@mipmap/internet"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Homepage"
                android:gravity="center"
                android:id="@+id/textView10" />
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="FÃ¼r Buchungsanfragen verwenden Sie bitte diese E-Mail Adresse"
        android:id="@+id/textView2"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_margin="20px"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/bttMail"
        android:textColor="#2196F3"
        android:text="jackthebusch@gmx.at"
        android:layout_gravity="center"/>


</LinearLayout>